<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:padding="5dp"
	android:background="@drawable/listview_corner_white_bg"
	android:layout_marginStart="5dp"
	android:layout_marginEnd="5dp"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="25dp"
 >

	<ImageView
		android:id="@+id/tournamentImage"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_gravity="center_horizontal"
		android:gravity="center_horizontal"
		android:scaleType="fitXY"
		android:src="@drawable/dummy_tournament"
		android:tint="@color/iconColor"
		/>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="3"
		android:orientation="vertical"
		android:id="@+id/customLinearLayout"
		android:paddingLeft="5dp"
		>
		<TextView
			android:id="@+id/textView1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:gravity="start"
			android:focusable="true"
			android:text="Tournament Nameeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"
			android:textColor="@color/mainHeader"

			/>
		<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:text="2017 Jun 08 to 2017 Sep 29"
			android:layout_below="@+id/textView1"
			android:textColor="@color/subHeader"

			/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/textView3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_below="@+id/textView1"
				android:layout_toRightOf="@+id/textView2"
				android:layout_weight="1"
				android:text="Karnataka"
				android:textSize="14sp"
				android:textColor="@color/subHeader"
				/>

			<TextView
				android:id="@+id/viewEvents"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_below="@+id/textView2"
				android:layout_weight="1"
				android:autoLink="email"
				android:gravity="end"
				android:linksClickable="true"
				android:text="View Events"
				android:textSize="14sp"
				android:textColor="@color/linkColor"

				/>
			<TextView
				android:id="@+id/moreAction"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_below="@+id/textView2"
				android:layout_weight="0.5"
				android:autoLink="email"
				android:gravity="end"
				android:linksClickable="true"
				android:text="more.."
				android:textSize="14sp"
				android:textColor="@color/linkColor"

				/>
		</LinearLayout>
	</LinearLayout>




</LinearLayout> 